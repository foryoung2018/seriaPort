<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/deposit_select"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/ibtn_record"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@mipmap/home_record" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_paper_select"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@mipmap/home_money" />

        <ImageButton
            android:id="@+id/ibtn_other_select"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="70dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/home_menu" />

<!--        <ImageButton-->
<!--            android:id="@+id/ibtn_record"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:layout_marginLeft="30dp"-->
<!--            android:background="@drawable/rectangle_solide_blue"-->
<!--            android:src="@mipmap/home_time" />-->


    </LinearLayout>


</RelativeLayout>
