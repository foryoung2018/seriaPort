<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/systemdubug"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_printdebug"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/blue_button_clicked"
        android:gravity="center"
        android:text="@string/printdevice_debug"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_button_clicked"
        android:gravity="center"
        android:text="@string/scanner_debug"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_printdebug"
        app:layout_constraintStart_toStartOf="@+id/tv_printdebug"
        app:layout_constraintTop_toBottomOf="@+id/tv_printdebug" />


    <include layout="@layout/common_btnback" />


    <include layout="@layout/common_btnlogout" />


</android.support.constraint.ConstraintLayout>
