<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/systeminfo"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llin1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/serial_num"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/editIp"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llin2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/llin1"
        app:layout_constraintStart_toStartOf="@+id/llin1"
        app:layout_constraintTop_toBottomOf="@+id/llin1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/device_num"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llin3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/llin2"
        app:layout_constraintStart_toStartOf="@+id/llin2"
        app:layout_constraintTop_toBottomOf="@+id/llin2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/software_num"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llin4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/llin3"
        app:layout_constraintStart_toStartOf="@+id/llin3"
        app:layout_constraintTop_toBottomOf="@+id/llin3">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/zhubannum"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llin5"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/llin4"
        app:layout_constraintStart_toStartOf="@+id/llin4"
        app:layout_constraintTop_toBottomOf="@+id/llin4">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_solide_blue"
            android:gravity="center"
            android:text="@string/imagenum"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_solide_baff"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/llin5"
        app:layout_constraintStart_toStartOf="@+id/llin5"
        app:layout_constraintTop_toBottomOf="@+id/llin5">

        <TextView
            android:id="@+id/updada1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_button_clicked"
            android:gravity="center"
            android:text="@string/softwareupdate"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_clicked"
            android:gravity="center"
            android:text="@string/gujianupdate"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_clicked"
            android:gravity="center"
            android:text="@string/imagebanupdate"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>


    <include layout="@layout/common_btnback" />

    <include layout="@layout/common_btnmiddle" />

    <include layout="@layout/common_btnlogout" />


</android.support.constraint.ConstraintLayout>
